{
  "compilerOptions": {
    "noEmit": true,
    "lib": ["esnext"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "checkJs": false,
    "allowJs": false,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
